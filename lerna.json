{
  "packages": [
    "packages/*"
  ],
  "version": "1.0.12",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ]
    },
    "bootstrap": {
      "ignore": [
        "component-*",
        "hide-money"
      ],
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "hoist": true
    }
  }
}
